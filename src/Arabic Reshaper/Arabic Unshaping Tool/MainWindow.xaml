<Window x:Class="Arabic_Unshaping_Tool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Arabic_Unshaping_Tool"
        mc:Ignorable="d"
        Title="Arabic Unshaper" Height="300" Width="800">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1*"></ColumnDefinition>
			<ColumnDefinition Width="3*"></ColumnDefinition>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="1*"></RowDefinition>
			<RowDefinition Height="1*"></RowDefinition>
			<RowDefinition Height="1*"></RowDefinition>
			<RowDefinition Height="1*"></RowDefinition>
			<RowDefinition Height="1*"></RowDefinition>
		</Grid.RowDefinitions>
		<Label VerticalAlignment="Center" HorizontalAlignment="Center">Text to unshape:</Label>
		<TextBox Name="txtbxInput" Grid.Column="1" Padding="3" Margin="4"></TextBox>
		<Button Name="btnStart" Grid.Row="1" Click="BtnStart_Click">Unshape</Button>
		<Label Grid.Row="2">Unicode of shaped input:</Label>
		<TextBox Name="lblShapedInputUnicode" Grid.Column="1" Grid.Row="2" Padding="3" Margin="4"></TextBox>
		<Label Grid.Row="3">Unicode of unshaped input:</Label>
		<TextBox Name="lblUnshapedInputUnicode" Grid.Column="1" Grid.Row="3" Padding="3" Margin="4"></TextBox>
		<Label Grid.Row="4">Unshaped Text:</Label>
		<TextBox Name="lblUnshapedText" Grid.Column="1" Grid.Row="4" Padding="3" Margin="4"></TextBox>
	</Grid>
</Window>
